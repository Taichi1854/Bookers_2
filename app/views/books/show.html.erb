<div class="container">
  <div class="row">

    <div class="col-xs-3">

      <%= render 'users/userinfo', user: @user %>

      <%= render 'books/newbook', book: @book_new %>

    </div>

   <div class="col-xs-9">

    <h2>Book detail</h2>

      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
            <tr>

              <td>
                <%= link_to user_path(@book.user_id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to @book.title, book_path(@book.id) %>
              </td>
              <td>
                <%= link_to @book.body %>
              </td>

              <% if current_user.id == @book.user_id %>
                <td>
                  <%= link_to "Edit",edit_book_path(@book.id),class: "btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to "Destroy",book_path(@book.id),class: "btn-sm btn-danger", method: :delete, data: { confirm: '本当に消しますか?' } %>
                </td>
              <% end %>

            </tr>
        </tbody>

      </table>
    </div>

  </div>
</div>