<div class="container">

  <div class="row">

    <div class="col-md-6 col-md-offset-3">

      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h3>
            <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
          </h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for @book, method: :patch do |f| %>

        <div class="field row">
          <th><%= f.label :Title %></th>
          <th><%= f.text_field :title, class:"col-xs-12", autofocus: true, autocomplete: "title" %></th>
        </div>

        <div class="field row">
          <th><%= f.label :Opinion %></th>
          <th><%= f.text_area :body, class:"col-xs-12" %></th>
        </div>

        <div class="actions row">
          <%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
        </div>

      <% end %>

      <%= link_to "Show", book_path(@book.id) %> |
      <%= link_to "Back", books_path %>

    </div>

  </div>

</div>